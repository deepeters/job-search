<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="10dp" android:background="@android:color/white">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/ivImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/avatar_user"
        android:paddingTop="1dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAA"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/ivImage"
        android:layout_toEndOf="@+id/ivImage" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAA"
        android:id="@+id/tvDescription"
        android:layout_below="@+id/tvName"
        android:layout_alignStart="@+id/tvName"
        android:textSize="16sp"
        android:textColor="#657786"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="50dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/btnView"
        android:src="@mipmap/show"
        android:background="@null"
        android:layout_alignTop="@+id/tvName"
        android:layout_alignParentRight="true" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sJobStatus"
        android:drawSelectorOnTop="true"
        android:layout_alignBottom="@+id/ivImage"
        android:layout_alignTop="@+id/tvName"
        android:layout_alignParentRight="true" />


</RelativeLayout>